{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}